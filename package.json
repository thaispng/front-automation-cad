{
  "name": "front-automation-cad",
  "version": "0.1.0",
  "description": "Front Automation CAD",
  "author": "Thais <thaisvtr26@gmail.com>",
  "main": "main.js",
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
     "packager": "electron-packager . MyApp --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "lucide-react": "^0.383.0",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^7.6.0",
    "electron": "^31.0.0",
    "electron-builder": "^22.10.5",

    "electron-packager": "^17.1.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "front-automation-cad",
    "files": [
      "out/**/*",
      "main.js"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
